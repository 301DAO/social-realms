{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/pages/*": ["pages/*"],
      "@/components/*": ["components/*"],
      "@/wallet/*": ["wallet/*"],
      "@/styles/*": ["styles/*"],
      "@/contexts/*": ["context/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"]
    }
  },
  "exclude": [
    ".git",
    ".app-cache",
    ".npm",
    ".npm-tmp",
    "/dist",
    "/dist*",
    "/build",
    "/node_modules",
    "/node_modules*",
    "/out",
    "/out*",
    "/tmp",
    "/tmp*",
    "**/dist/*",
    "**/node_modules/*",
    "/package-lock.json"
  ]
}
