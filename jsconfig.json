{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/pages/*": ["pages/*"],
      "@/components/*": ["components/*"],
      "@/wallet/*": ["wallet/*"],
      "@/styles/*": ["styles/*"],
      "@/contexts/*": ["contexts/*"],
      "@/hooks/*": ["hooks/*"],
      "@/util/*": ["util/*"],
      "@/store/*": ["store/*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "exclude": [
    ".git",
    ".app-cache",
    ".npm",
    ".npm-tmp",
    "/dist",
    "/dist*",
    ".next",
    "/node_modules",
    "/out",
    "/out*",
    "/tmp",
    "/tmp*",
    "**/dist/*",
    "**/node_modules/*",
    "/package-lock.json",
    "./.scratch",
    "./next",
    "./build"
  ]
}
